    <link rel="stylesheet" href="~/css/styles.css">
    <title>Imaginatio - Inicio</title>
</head>
<body>
    <header>
        <div class="navbar">
            <div class="menu-wrapper">
                <div class="menu-trigger" style=" margin-left: 30%; padding-top: 10px;">
                    <li class="menu-button" style="--i:#823bbd; --j:#280a41; z-index: 1000;">
                        <span class="icon">
                            <img src="~/images/menu.png" alt="Menú">
                        </span>
                        <span class="title">Menu</span>
                    </li>
                </div>

                <nav id="sideMenu" class="side-menu">
                    <a asp-controller="Home" asp-action="Index">HOME</a>
                    <a asp-controller="Home" asp-action="Actual">IMAGINATIO 202X</a>
                    <a asp-controller="Home" asp-action="Calendario">CALENDAR</a>
                    <a asp-controller="Home" asp-action="QSomos">WHO WE ARE</a>
                    <a asp-controller="Home" asp-action="Past">PAST IMAGINATIOS</a>
                    <a asp-controller="Home" asp-action="MasMuestras">WORK SAMPLES</a>
                    <a href="https://sites.google.com/unimilitar.edu.co/multimedia/ingenier%C3%ADa-en-multimedia?authuser=0" target="_blank">CONTACT US</a>
                </nav>
            </div>


            <!-- Contador real -->
            <div class="countdown">
                <span class="real-timer" data-format="compact"></span>
                <small>days left</small>
            </div>
            <ul class="icons" style=" margin-left: auto; margin-right: 1%; padding-top: 10px;">
                <li style="--i:#56CCF2;--j:#2F80ED">
                    <a asp-controller="Home" asp-action="Index">
                        <span class="icon">
                            <img src="~/images/home.png" alt="Email">
                        </span>
                        <span class="title">HOME</span>
                    </a>
                </li>
            </ul>
        </div>
    </header>
    <div id="stars"></div>
    <div id="stars2"></div>
    <div id="stars3"></div>
    @RenderBody()
    <footer>
        <div class="footer">
            <ul class="icons">
                <!-- Contacto -->
                <li style="--i:#56CCF2;--j:#2F80ED">
                    <a href="https://sites.google.com/unimilitar.edu.co/multimedia/ingenier%C3%ADa-en-multimedia?authuser=0" target="_blank">
                        <span class="icon">
                            <img src="~/images/email.png" alt="Email">
                        </span>
                        <span class="title">CONTACT US</span>
                    </a>
                </li>

                <!-- Logo central -->
                <li style="--i:#ffa9c6;--j:#f434e2">
                    <a href="HOMEPAGE.html">
                        <span class="icon">
                            <img src="~/images/logo.png" class="logo-icon_footer" alt="Logo Imaginatio">
                        </span>
                        <span class="title">IMAGINATIO</span>
                    </a>
                </li>

                <!-- Facebook -->
                <li style="--i:#3b5998;--j:#00aced">
                    <a href="https://www.facebook.com/IngMultimediaCampus/" target="_blank">
                        <span class="icon">
                            <img src="~/images/fb.png" alt="Facebook">
                        </span>
                        <span class="title">FACEBOOK</span>
                    </a>
                </li>

                <!-- Instagram -->
                <li style="--i:#e1306c;--j:#f77737">
                    <a href="https://www.instagram.com/ing.enmultimedia/" target="_blank">
                        <span class="icon">
                            <img src="~/images/ig.png" alt="Instagram">
                        </span>
                        <span class="title">INSTAGRAM</span>
                    </a>
                </li>
            </ul>
        </div>
    </footer>
    <script src="~/js/gen.js"></script>
    @* <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="HOME">MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HOME">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false) *@
</body>
</html>
